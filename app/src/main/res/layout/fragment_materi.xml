<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentMateri">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_materi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tittle"
        android:fontFamily="@font/fontbold"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_subtittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sub Tittle"
        android:fontFamily="@font/fontsemibold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_materi_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/materi_list"
        tools:layout="@layout/materi_list"/>

</LinearLayout>